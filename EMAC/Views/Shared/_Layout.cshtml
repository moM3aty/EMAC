@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EMAC | مؤسسة الإخلاص الحديثة</title>
    <meta name="description" content="EMAC - مؤسسة الإخلاص الحديثة للتكييف والتبريد.">

    <link rel="manifest" href="~/manifest.json">
    <meta name="theme-color" content="#004A99">
    <link rel="apple-touch-icon" href="~/images/emac_logo.png">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <link rel="stylesheet" href="~/css/emac_style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <header style="background-color: #004A99;">
        <div class="container">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")" class="logo-link">
                    <div class="logo-content">
                        <img src="~/images/emac_logo.png" alt="شعار EMAC" class="header-logo-img">
                        <span style="color: #f0f0f0;">مؤسسة الإخلاص الحديثة</span>
                    </div>
                </a>
            </div>
            <button class="hamburger-menu" aria-label="Toggle Navigation">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </button>
            <nav>
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">الرئيسية</a></li>
                    <li><a href="@Url.Action("Index", "Services")">خدماتنا</a></li>
                    <li><a href="@Url.Action("Index", "Store")">المتجر</a></li>
                    <li><a href="@Url.Action("Index", "Automation")">نظام الإدارة</a></li>
                    <li><a href="@Url.Action("Index", "Tracking")">تتبع طلبك</a></li>

                    <li>
                        <a href="@Url.Action("Favorites", "Store")" title="المفضلة" style="position: relative;">
                            <i class="fas fa-heart"></i>
                            @{
                                var favCookie = Context.Request.Cookies["EmacFavs"];
                                int count = !string.IsNullOrEmpty(favCookie) ? favCookie.Split(',', StringSplitOptions.RemoveEmptyEntries).Length : 0;
                            }
                            @if (count > 0)
                            {
                                <span id="fav-count" style="position: absolute; top: 0; right: 0; background: #e60026; color: white; border-radius: 50%; width: 18px; height: 18px; font-size: 0.7em; display: flex; align-items: center; justify-content: center;">@count</span>
                            }
                        </a>
                    </li>

                    @{
                        var isAdmin = HttpContextAccessor.HttpContext.Session.GetString("IsAdmin");
                        var isTech = HttpContextAccessor.HttpContext.Session.GetString("TechId");
                    }

                    @if (isAdmin == "true")
                    {
                        <li><a href="@Url.Action("Dashboard", "Admin")" style="color: #ffcc00; font-weight: bold;"><i class="fas fa-tachometer-alt"></i> لوحة الإدارة</a></li>
                    }
                    else if (!string.IsNullOrEmpty(isTech))
                    {
                        <li><a href="@Url.Action("Dashboard", "Technician")" style="color: #00ffcc; font-weight: bold;"><i class="fas fa-tools"></i> بوابة الفني</a></li>
                    }

                </ul>
            </nav>
            <div class="contact-header">
                <a href="tel:+966510891747" class="phone-number">966510891747</a>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="footer-grid">
                <div class="footer-col">
                    <h3>مؤسسة الإخلاص الحديثة EMAC</h3>
                    <p>الريادة والشمول في صيانة وتركيب الأجهزة الكهربائية والتكييف والتبريد على نطاق المملكة.</p>
                    <div class="social-links">
                        <a href="#" target="_blank"><i class="fab fa-snapchat-ghost"></i></a>
                        <a href="#" target="_blank"><i class="fab fa-instagram"></i></a>
                        <a href="#" target="_blank"><i class="fab fa-facebook-f"></i></a>
                    </div>
                </div>
                <div class="footer-col">
                    <h3>روابط هامة</h3>
                    <ul>
                        <li><a href="@Url.Action("Index", "Services")">حجز صيانة</a></li>
                        <li><a href="@Url.Action("Favorites", "Store")">المفضلة</a></li>
                        <li><a href="@Url.Action("Login", "Admin")">دخول الموظفين</a></li>
                        <li><a href="@Url.Action("Privacy", "Home")">سياسة الخصوصية</a></li>
                    </ul>
                </div>
                <div class="footer-col" id="contact-footer">
                    <h3>اتصل بنا</h3>
                    <p>الهاتف: <a href="tel:+966510891747">+966510891747</a></p>
                    <p>الموقع: الأحساء، المملكة العربية السعودية</p>
                </div>
            </div>
            <div class="copyright">
                <p>&copy; @System.DateTime.Now.Year مؤسسة الإخلاص الحديثة EMAC. جميع الحقوق محفوظة.</p>
            </div>
        </div>
    </footer>

    <div class="fixed-contact-buttons">
        <a href="https://wa.me/966564133825" target="_blank" class="floating-btn whatsapp-btn">
            <i class="fab fa-whatsapp"></i>
        </a>
        <a href="tel:+966510891747" class="floating-btn phone-btn">
            <i class="fas fa-phone-alt"></i>
        </a>
    </div>

    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then(registration => {
                        console.log('ServiceWorker registration successful');
                    })
                    .catch(err => {
                        console.log('ServiceWorker registration failed: ', err);
                    });
            });
        }
    </script>

    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>