@model EMAC.Models.WorkshopTicket
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>ملصق الجهاز - @Model.DeviceCode</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@600;800&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Cairo', sans-serif;
            background: #eee;
        }

        .label-container {
            width: 380px; /* حجم مناسب لطابعات الباركود الحرارية */
            height: 250px;
            background: white;
            padding: 15px;
            margin: 20px auto;
            border: 2px solid black;
            text-align: center;
            box-sizing: border-box;
            page-break-inside: avoid;
        }

        h2 {
            margin: 0;
            font-size: 1.5em;
            border-bottom: 2px solid black;
            padding-bottom: 5px;
        }

        .code {
            font-size: 1.8em;
            font-weight: 800;
            letter-spacing: 2px;
            margin: 10px 0;
            background: #eee;
            padding: 5px;
        }

        .info {
            font-size: 1em;
            font-weight: 600;
            text-align: right;
            margin-top: 15px;
        }

            .info div {
                margin-bottom: 5px;
                border-bottom: 1px dotted #ccc;
                display: flex;
                justify-content: space-between;
            }
        @@media print {
            body

        {
            background: white;
        }

        .label-container {
            margin: 0;
            border: none;
        }

        button {
            display: none;
        }

        }
    </style>
</head>
<body>
    <div style="text-align: center; margin-top: 10px;">
        <button onclick="window.print()">طباعة الملصق</button>
        <button onclick="window.history.back()">رجوع</button>
    </div>

    <div class="label-container">
        <h2>EMAC WORKSHOP</h2>
        <div class="code">@Model.DeviceCode</div>

        <div class="info">
            <div><span>العميل:</span> <span>@(Model.ServiceRequest?.CustomerName ?? "عميل ورشة")</span></div>
            <div><span>الموديل:</span> <span>@Model.DeviceModel</span></div>
            <div><span>التاريخ:</span> <span>@Model.ReceivedAt.ToString("yyyy/MM/dd")</span></div>
            <div><span>S/N:</span> <span>@Model.SerialNumber</span></div>
        </div>

        <div style="margin-top: 10px; font-size: 0.8em;">
            يرجى عدم إزالة هذا الملصق حتى التسليم
        </div>
    </div>
</body>
</html>