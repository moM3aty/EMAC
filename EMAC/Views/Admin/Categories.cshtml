@model IEnumerable<EMAC.Models.Category>

@{
    ViewData["Title"] = "إدارة الأقسام";
}

<div class="container" style="padding-top: 120px; padding-bottom: 50px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <h1>إدارة أقسام المتجر</h1>
        <div>
            <a href="@Url.Action("EditCategory", "Admin")" class="btn primary-btn"><i class="fas fa-plus"></i> قسم جديد</a>
            <a href="@Url.Action("Dashboard", "Admin")" class="btn secondary-btn">عودة</a>
        </div>
    </div>

    <div style="background: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
        <table class="table" style="width: 100%; text-align: right;">
            <thead>
                <tr style="background-color: var(--primary-color); color: white;">
                    <th style="padding: 15px;">الصورة</th>
                    <th>الاسم</th>
                    <th>النوع</th>
                    <th>يتبع لقسم</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom: 1px solid #eee;">
                        <td style="padding: 10px;">
                            <img src="~/images/categories/@(string.IsNullOrEmpty(item.ImageUrl) ? "default.png" : item.ImageUrl)" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" onerror="this.src='https://via.placeholder.com/50'" />
                        </td>
                        <td style="font-weight: bold;">@item.Name</td>
                        <td>
                            @if (item.ParentId == null)
                            {
                                <span class="badge" style="background: green; color: white; padding: 3px 8px; border-radius: 4px;">رئيسي</span>
                            }
                            else
                            {

                                <span class="badge" style="background: orange; color: white; padding: 3px 8px; border-radius: 4px;">فرعي</span>
                            }
                        </td>
                        <td>@(item.ParentCategory?.Name ?? "-")</td>
                        <td>
                            <a href="@Url.Action("EditCategory", "Admin", new { id = item.Id })" class="btn secondary-btn" style="padding: 5px 10px; font-size: 0.8em;"><i class="fas fa-edit"></i></a>
                            <form asp-action="DeleteCategory" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('حذف القسم قد يؤثر على المنتجات التابعة له. هل أنت متأكد؟');">
                                <button type="submit" class="btn primary-btn" style="padding: 5px 10px; font-size: 0.8em; background-color: #dc3545; border:none;"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>