@{
    ViewData["Title"] = "تسجيل دخول الإدارة";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل دخول المشرف - EMAC</title>
    <link rel="stylesheet" href="~/css/emac_style.css">
    <link href="~/images/logo.jpeg" rel="icon" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f0f2f5;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: 'Cairo', sans-serif;
        }

        .login-box {
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .login-logo {
            width: 120px;
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-sizing: border-box;
        }

        .btn-login {
            width: 100%;
            padding: 12px;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-login:hover {
                background-color: var(--primary-darker);
            }

        .error-msg {
            color: red;
            margin-bottom: 15px;
            font-size: 0.9em;
        }

        .btn-back {
            display: block;
            width: 100%;
            padding: 10px;
            margin-top: 15px;
            background-color: transparent;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            box-sizing: border-box;
            transition: 0.3s;
        }

            .btn-back:hover {
                background-color: var(--primary-color);
                color: white;
            }
    </style>
</head>
<body>
    <div class="login-box">
        <img src="~/images/emac_logo.png" alt="EMAC Logo" class="login-logo">
        <h2 style="color: var(--primary-color); margin-bottom: 20px;">لوحة التحكم</h2>

        @if (ViewBag.Error != null)
        {
            <div class="error-msg">@ViewBag.Error</div>
        }

        <form method="post" asp-action="Login">
            <input type="text" name="username" class="form-control" placeholder="اسم المستخدم" required>
            <input type="password" name="password" class="form-control" placeholder="كلمة المرور" required>
            <button type="submit" class="btn-login">دخول</button>
        </form>

        <a href="@Url.Action("Index", "Home")" class="btn-back">العودة للصفحة الرئيسية</a>

        <p style="margin-top: 20px; font-size: 0.8em; color: #888;">&copy; EMAC System Admin</p>
    </div>
</body>
</html>