@model IEnumerable<EMAC.Models.Technician>

@{
    ViewData["Title"] = "إدارة الفنيين";
    var serviceNames = ViewBag.ServiceNames as Dictionary<string, string>;
}

<div class="container" style="padding-top: 120px; padding-bottom: 50px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <h1>إدارة الفنيين والموظفين</h1>
        <div>
            <a href="@Url.Action("EditTechnician", "Admin")" class="btn primary-btn"><i class="fas fa-user-plus"></i> إضافة فني جديد</a>
            <a href="@Url.Action("Dashboard", "Admin")" class="btn secondary-btn">عودة للوحة التحكم</a>
        </div>
    </div>

    <div style="background: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
        <table class="table" style="width: 100%; text-align: right; border-collapse: collapse;">
            <thead>
                <tr style="background-color: var(--primary-color); color: white;">
                    <th style="padding: 15px;">الاسم الكامل</th>
                    <th style="padding: 15px;">التخصص</th>
                    <th style="padding: 15px;">مناطق التغطية</th>
                    <th style="padding: 15px;">ساعات العمل</th>
                    <th style="padding: 15px;">الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom: 1px solid #eee;">
                        <td style="padding: 15px; font-weight: bold;">@item.FullName</td>
                        <td style="padding: 15px;">
                            @if (item.Specialty == "General")
                            {
                                <span>عام (شامل)</span>
                            }
                            else
                            {
                                @(serviceNames != null && serviceNames.ContainsKey(item.Specialty) ? serviceNames[item.Specialty] : item.Specialty)
                            }
                        </td>
                        <td style="padding: 15px;">@item.CoveredRegions</td>
                        <td style="padding: 15px;">@item.WorkingHoursStart - @item.WorkingHoursEnd</td>
                        <td style="padding: 15px;">
                            <a href="@Url.Action("TechnicianDetails", "Admin", new { id = item.Id })" class="btn primary-btn" style="padding: 5px 15px; font-size: 0.9em; background-color: #17a2b8; border: none;">
                                <i class="fas fa-calendar-alt"></i> الجدول والمهام
                            </a>
                            <a href="@Url.Action("EditTechnician", "Admin", new { id = item.Id })" class="btn secondary-btn" style="padding: 5px 15px; font-size: 0.9em;">
                                <i class="fas fa-edit"></i> تعديل
                            </a>
                            <form asp-action="DeleteTechnician" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('هل أنت متأكد من حذف هذا الفني؟');">
                                <button type="submit" class="btn primary-btn" style="padding: 5px 15px; font-size: 0.9em; background-color: #dc3545; border: none;">
                                    <i class="fas fa-trash"></i> حذف
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>